{
  "src": "./src",
  "temp": "../temp",
  "dest": "./public/assets",
  "templates": "./craft/templates/",


  "javascripts": {
    "src": "javascripts",
    "dest": "js"
  },

  "stylesheets": {
    "src": "stylesheets",
    "dest": "css"
  },

  "images": {
    "src": "images",
    "dest": "images"
  },

  "fonts": {
    "src": "fonts",
    "dest": "fonts"
  },

  "icons": {
    "src": "icons",
    "dest": "images"
  },

  "urls": {
    "live": "https://cbd.thcpost.ca/",
    "local": "//localhost:3000/",
    "critical": "https://cbd.thcpost.ca/"
  },

  "vars": {
    "siteCssName": "style.css",
    "scssName": "style.scss",
    "cssName": "style.css"
  },

  "critical": [
    { "url": "", "template": "/shop/index" },
    { "url": "shop", "template": "/shop/products/index" },
    { "url": "shop/flower/jack-herer", "template": "/shop/products/_flower" },
    { "url": "shop/cart", "template": "shop/cart" },
    { "url": "shop/checkout", "template": "shop/checkout/index" },
    { "url": "frequently-asked-questions", "template": "shop/faq/faq" },
    { "url": "privacy-policy", "template": "shop/privacy/privacyPolicy" },
    { "url": "terms", "template": "shop/terms/termConditions" },
    { "url": "register", "template": "shop/contact/contact" },
    { "url": "contact", "template": "shop/user/register" },
    { "url": "login", "template": "shop/user/login" },
    { "url": "404", "template": "404" }
  ]
}
