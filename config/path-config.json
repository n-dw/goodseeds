{
  "src": "./src",
  "temp": "./temp",
  "dest": "./public/assets",
  "templates": "./craft/templates/",
  "nodeModules": "./node_modules",


  "javascripts": {
    "src": "javascripts",
    "dest": "js",
    "destBuild": "./public/static/assets/js"
  },

  "stylesheets": {
    "src": "stylesheets",
    "dest": "css"
  },

  "images": {
    "src": "images",
    "dest": "images"
  },

  "build": {
    "base": "./build/",
    "css": "./build/css/",
    "fontello": "./build/fonts/fontello/",
    "fonts": "./build/fonts/",
    "js": "./build/js/",
    "html": "./build/html/",
    "img": "./build/img/"
  },

  "fonts": {
    "src": "fonts",
    "dest": "fonts"
  },

  "icons": {
    "src": "icons",
    "dest": "images"
  },

  "urls": {
    "live": "https://thc.goodseeds.ca/",
    "local": "//localhost:3000/",
    "critical": "https://thc.goodseeds.ca/"
  },

  "vars": {
    "siteCssName": "style.css",
    "scssName": "style.scss",
    "cssName": "style.css"
  },

  "favicon": {
    "src": "favicon.svg",
    "dest": "./public/favicon",
    "html": "_includes/favicon/",
    "relPath": "favicon"
  },

  "appInfo":{
    "siteUrl": "https://goodseeds.ca/",
    "name": "Good Seeds",
    "description": "Good Seeds - Breeds - Good Deeds",
    "author": "Good Seeds",
    "version": "1.0"
  },

  "resources":[
    {"name": "vue", "path": "vue/dist/vue.min.js"},
    {"name": "axios", "path": "axios/dist/axios.min.js"}
  ],
  "critical": [
    { "url": "", "template": "/shop/index" },
    { "url": "our-story", "template": "/shop/our-story/_lsindex" },
    { "url": "shop", "template": "/shop/products/index" },
    { "url": "shop/flower/jack-herer", "template": "/shop/products/_flower" },
    { "url": "shop/cart", "template": "shop/cart" },
    { "url": "shop/checkout", "template": "shop/checkout/index" },
    { "url": "frequently-asked-questions", "template": "shop/faq/faq" },
    { "url": "privacy-policy", "template": "shop/privacy/privacyPolicy" },
    { "url": "terms", "template": "shop/terms/termConditions" },
    { "url": "register", "template": "shop/contact/contact" },
    { "url": "contact", "template": "shop/user/register" },
    { "url": "login", "template": "shop/user/login" },
    { "url": "404", "template": "404" }
  ]

}
