{
  "root": {
    "src": "./src",
    "dest": "./public"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "/public"
      }
    },

    "json": {
      "src": "json",
      "dest": "json"
    },
    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "js",
      "dest": "js",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },
    "css": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": true,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "../craft/templates",
      "extensions": ["html", "twig"]
    },

    "images": {
      "src": "img",
      "dest": "img",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "img",
      "extensions": ["svg"]
    },

    "production": {
      "rev": true
    }
  }
}
