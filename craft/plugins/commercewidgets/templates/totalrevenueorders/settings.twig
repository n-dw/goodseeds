{% import "_includes/forms" as forms %}

{% set orderStatusOptions = [{ label: 'All', value: '0' }] %}

{% for status in orderStatuses %}
	{% set orderStatusOptions = orderStatusOptions|merge([{ label: status.name, value: status.id }]) %}
{% endfor %}

{{ forms.selectField({
    label: 'Order Status'|t,
    id: 'orderStatusId',
    name: 'orderStatusId',
    value: settings.orderStatusId,
	options: orderStatusOptions,
    required: true
}) }}