{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: "Limit"|t,
    name: 'limit',
    value: settings.limit,
    size: 2,
    errors: settings.getErrors('limit')
}) }}

{{ forms.selectField({
    label: 'Include Guest Orders?'|t,
    name: 'includeGuestOrders',
    value: settings.includeGuestOrders,
	options: [
		{ label: 'Yes', value: 'yes' }, 
		{ label: 'No', value: 'no' }
	]
}) }}

{{ forms.selectField({
    label: 'Group By'|t,
    name: 'groupBy',
    value: settings.groupBy,
	options: [
		{ label: 'Email Address', value: 'email' }, 
		{ label: 'Customer ID', value: 'customerId' }
	]
}) }}

{{ forms.selectField({
    label: 'Order By'|t,
    name: 'orderBy',
    value: settings.orderBy,
	options: [
		{ label: 'Order Total', value: 'totalOrders' }, 
		{ label: 'Revenue Total', value: 'totalRevenue' }
	]
}) }}